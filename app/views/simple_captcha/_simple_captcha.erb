<%- content_for :header do -%>
	<style type="text/css">
		#simple_captcha, #simple_captcha span { display:table; }
		#simple_captcha .simple_captcha_field,
		#simple_captcha .simple_captcha_image {
			border:1px solid #CCC;
			margin:0px 0px 3px 0px !important;
			padding:0px !important;
		}
		#simple_captcha .simple_captcha_image {
			background-color:#FFF;
		}
		#simple_captcha .simple_captcha_image img {
			margin:0px !important;
			padding:0px !important;
			width:110px !important;
		}
		#simple_captcha .simple_captcha_label { font-size:12px; }
		#simple_captcha .simple_captcha_field { background-color:#EFEFEF; }
		#simple_captcha .simple_captcha_field input {
			width:150px !important;
			font-size:16px;
			border:none;
			background-color:#EFEFEF;
			padding:0 !important;
		}
	</style>
<%- end -%>

<span id='simple_captcha'>
	<span class='simple_captcha_image'>
		<%= @simple_captcha_options[:image] %>
	</span>

	<span class='simple_captcha_field'>
		<%= @simple_captcha_options[:field] %>
	</span>

	<span class='simple_captcha_label'>
		<%= @simple_captcha_options[:label] %>
	</span>
</span>
