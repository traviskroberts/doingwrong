<%- if @error == 'save' -%>
	$("#comment_notice").html("<p>There was an error saving the comment.</p>");
<%- elsif @error == 'captcha' -%>
	$("#comment_notice").html("<p>You must type in the code from the image.</p>");
<%- else -%>
	<!-- add the new comment -->
	$("#comments").append("<%= escape_javascript(render(:partial => 'entries/comment', :object => @comment)) %>");
	
	<!-- update the comment count -->
	$("#comment_count").html("<%= escape_javascript(link_to(pluralize(@comment.entry.comments.count, 'comment'), entry_path(@comment.entry))) %>")
	
	<!-- reset the form fields -->
	$("#comment_name").val("");
	$("#comment_message").val("");
	
	<!-- replace the captcha -->
	$("#simple_captcha_container").html("<%= escape_javascript(render(:partial => 'shared/simple_captcha')) %>")
<%- end -%>